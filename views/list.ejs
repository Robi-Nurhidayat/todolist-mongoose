<%- include('partials/header') -%>
<div class="card">
    <h1 class="card-title"><%= title %> </h1>
    <div class="card-body">
      <form action="/addTodo" method="post">
          <div class="form-group">
              <input type="text" name="todo" class="form-control">
          </div>
          <div class="form-group mt-3">
              <button type="submit" name="buttonAdd" class="btn btn-primary">Add</button>
          </div>
      </form>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
        <ul class="list-group">
            <% todos.forEach(todo => {  %>
                <li class="list-group-item"><%= todo.todo %> </li>
                <form action="/deleteTodo" method="post">
                    <input type="hidden" name="todoId" value="<%= todo._id %>">
                    <button type="submit" class="btn btn-outline-danger btn-sm mt-2 mb-2">Delete</button>
                </form>
            <% }) %>
          </ul>
    </div>
  </div>
<%- include('partials/footer') -%>